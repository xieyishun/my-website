import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { withBase } from '../../utils/url';

export async function getStaticPaths() {
	const allPosts = await getCollection('blog');

	const seriesSet = new Set<string>();
	allPosts.forEach((post) => {
		const seriesList = post.data.series ?? [];
		seriesList.forEach((name) => {
			seriesSet.add(name);
		});
	});

	return Array.from(seriesSet).map((name) => {
		const seriesSlug = encodeURIComponent(name);
		return {
			params: { series: seriesSlug },
			props: {
				seriesName: name,
				posts: allPosts.filter((post) => post.data.series?.includes(name)),
			},
		};
	});
}

interface Props {
	seriesName: string;
	posts: any[];
}

const { seriesName, posts } = Astro.props;

const sortedPosts = posts.sort(
	(a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime(),
);

