        font-size: 1.1rem;
      }
      .posts-list {
        list-style: none;
        padding: 0;
      }
      .post-item {
        padding: 1rem 0;
        border-bottom: 1px solid #e0e0e0;
      }
      .post-item:last-child {
        border-bottom: none;
      }
      .post-title {
        font-size: 1.5rem;
