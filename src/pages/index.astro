---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PostCard from '../components/PostCard.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { withBase } from '../utils/url';
import { slugify } from '../utils/slug';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import '../styles/home.css';

// ✅ 先复制再排序，避免 getCollection 返回数组被“就地排序”带来潜在副作用
const posts = (await getCollection('blog'))
	.slice()
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// ✅ “最新更新”：updatedDate 优先，否则 fallback pubDate
const getUpdateTime = (post: (typeof posts)[number]) =>
	(post.data.updatedDate ?? post.data.pubDate).valueOf();

// ✅ 最新更新列表取前 5（按 updateTime 排）
const latestPosts = posts
	.slice()
	.sort((a, b) => getUpdateTime(b) - getUpdateTime(a))
	.slice(0, 5);

type SeriesItem = {
	name: string;
	count: number;
	latestDate: Date; // ✅ 用 updatedDate 优先
};

const seriesMap = new Map<string, SeriesItem>();
const tagMap = new Map<string, number>();

posts.forEach((post) => {
	const effectiveDate = post.data.updatedDate ?? post.data.pubDate;

	const seriesList = post.data.series ?? [];
	seriesList.forEach((name) => {
		const existing = seriesMap.get(name);
		if (!existing) {
			seriesMap.set(name, {
				name,
				count: 1,
				latestDate: effectiveDate,
			});
			return;
		}
		existing.count += 1;
		if (effectiveDate > existing.latestDate) {
			existing.latestDate = effectiveDate;
		}
	});

	const tags = post.data.tags ?? [];
	tags.forEach((tag) => {
		tagMap.set(tag, (tagMap.get(tag) || 0) + 1);
	});
});

const topSeries = Array.from(seriesMap.values())
	.sort((a, b) => {
		if (b.count !== a.count) return b.count - a.count;
		return b.latestDate.valueOf() - a.latestDate.valueOf();
	})
	.slice(0, 6);

const topTags = Array.from(tagMap.entries())
	.map(([name, count]) => ({ name, count }))
	.sort((a, b) => {
		if (b.count !== a.count) return b.count - a.count;
		return a.name.localeCompare(b.name, 'zh-CN');
	})
	.slice(0, 12);
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main id="main-content">
			<section class="hero">
				<h1>{SITE_TITLE}</h1>
				<p>{SITE_DESCRIPTION}</p>
			</section>

			<section class="section">
				<div class="section-header">
					<h2 class="section-title">最新更新</h2>
					<a class="section-link" href={withBase('/blog/')}>查看全部</a>
				</div>
				{latestPosts.length > 0 ? (
					<ul class="posts-list">
						{latestPosts.map((post) => (
							<PostCard post={post} showTags={true} />
						))}
					</ul>
				) : (
					<div class="empty">暂无文章</div>
				)}
			</section>

			<section class="section">
				<div class="section-header">
					<h2 class="section-title">专题 Series</h2>
					<a class="section-link" href={withBase('/series/')}>查看全部专题</a>
				</div>
				{topSeries.length > 0 ? (
					<div class="series-grid">
						{topSeries.map((item) => (
							<a
								class="series-card"
								href={withBase(`/series/${slugify(item.name)}/`)}
							>
								<div class="card-title">{item.name}</div>
								<div class="card-meta">{item.count} 篇文章</div>
								<div class="card-meta">
									最近更新：<FormattedDate date={item.latestDate} />
								</div>
							</a>
						))}
					</div>
				) : (
					<div class="empty">暂无专题</div>
				)}
			</section>

			<section class="section">
				<div class="section-header">
					<h2 class="section-title">标签 Tags</h2>
					<a class="section-link" href={withBase('/tags/')}>查看全部标签</a>
				</div>
				{topTags.length > 0 ? (
					<div class="tags-grid">
						{topTags.map((tag) => (
							<a
								class="tag-card"
								href={withBase(`/tags/${slugify(tag.name)}/`)}
							>
								<div class="card-title">{tag.name}</div>
								<div class="card-meta">{tag.count} 篇文章</div>
							</a>
						))}
					</div>
				) : (
					<div class="empty">暂无标签</div>
				)}
			</section>
		</main>
		<Footer />
	</body>
</html>
